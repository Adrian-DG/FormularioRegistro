
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="jumbotron">
    <h1 class="text-center">Formulario Registro</h1>
    <p class="text-center">Complete el siguiente formulario</p>
</header>

<nav>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="createTab" data-toggle="tab" href="#create" role="tab" aria-controls="home" aria-selected="true">Registrar Cliente</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="showTab" data-toggle="tab" href="#show" role="tab" aria-controls="home" aria-selected="true">Mostrar Clientes</a>
        </li>
    </ul>
</nav>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="create" role="tabpanel" aria-labelledby="home-tab">
       @Html.Partial("_Crear")
    </div>
    <div class="tab-pane fade show" id="show" role="tabpanel" aria-labelledby="show-tab">
       @Html.Action("MostrarClientes","Cliente")
    </div>
</div>